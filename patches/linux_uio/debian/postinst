#!/bin/sh
# postinst script for pda kernel module
#
# see: dh_installdeb(1)

set -e

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

# targets: configure|abort-upgrade|abort-remove|abort-deconfigure

case "$1" in
    configure)

        if ! getent group pda > /dev/null 2>&1
        then
            echo "Creating 'pda' system group for device access management"
            addgroup --system pda
        fi

        modprobe -a uio_pci_dma

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

exit 0
